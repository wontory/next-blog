---
import { Image } from 'astro:assets'
import { getCollection } from 'astro:content'
import { AspectRatio } from '@/components/ui/aspect-ratio'
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'
import BaseLayout from '@/layouts/base-layout.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '@/consts'

const posts = (await getCollection('project')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section>
    <div class="grid justify-items-center gap-8 md:grid-cols-2">
      {
        posts?.map((post) => (
          <a href={`/project/${post.slug}/`} class="w-full">
            <Card className="hover:bg-foreground/5 transition group">
              <CardHeader>
                <AspectRatio
                  ratio={16 / 9}
                  className="bg-muted overflow-hidden rounded-lg border"
                >
                  <Image
                    src={post.data.heroImage}
                    alt={post.data.title}
                    draggable="false"
                    class="h-full w-full object-cover shadow-lg transition-transform group-hover:scale-110"
                  />
                </AspectRatio>
              </CardHeader>
              <CardContent>
                <CardTitle>{post.data.title}</CardTitle>
                <CardDescription>{post.data.description}</CardDescription>
              </CardContent>
            </Card>
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
