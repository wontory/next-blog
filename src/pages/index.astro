---
import Link from '@/components/link.astro'
import { SparklesCore } from '@/components/client/sparkles'
import { ModeToggle } from '@/components/client/mode-toggle'
import RootLayout from '@/layouts/root-layout.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '@/consts'
---

<RootLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="flex h-screen w-screen flex-col items-center justify-center">
    <ModeToggle className="z-50" client:load />
    <nav class="z-50 flex gap-4 py-16">
      <Link href="/about" class="font-medium">About</Link>
      <Link href="/project" class="font-medium">Project</Link>
      <Link href="/blog" class="font-medium">Blog</Link>
    </nav>
    <h1
      class="scroll-m-20 font-serif text-6xl font-extrabold tracking-tight lg:text-9xl"
    >
      wontory
    </h1>
    <span class="z-50 px-4 py-16 text-center font-medium text-foreground/50">
      Frontend developer who loves to create beautiful and functional websites</span
    >
    <div class="absolute h-full w-full">
      <SparklesCore
        background="transparent"
        minSize={1}
        maxSize={3}
        particleDensity={5}
        className="h-full w-full"
        client:load
      />
      <div
        class="absolute inset-0 h-full w-full bg-background [mask-image:radial-gradient(500px_500px_at_center,transparent,white)]"
      >
      </div>
    </div>
  </main>
</RootLayout>
