{
  "extends": "@wontory/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "#site/content": ["./.velite"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
