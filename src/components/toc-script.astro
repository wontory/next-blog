<script>
  import tocbot from 'tocbot'

  document.addEventListener('astro:page-load', () => {
    tocbot.init({
      tocSelector: '.toc',
      contentSelector: '.prose',
      headingSelector: 'h1, h2, h3, h4',
      listClass: 'list',
      isCollapsedClass: 'collapsed',
      linkClass: 'link',
      activeLinkClass: 'activated',
      hasInnerContainers: true,
    })
  })
</script>
